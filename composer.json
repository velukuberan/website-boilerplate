{
    "name": "accerso/website-boilerplate",
    "description": "Accerso WordPress development boilerplate with Bedrock and Docker - WP 6.5 + PHP 8.2",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Velmurugan K",
            "email": "vkuberan@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "johnpbloch/wordpress": "~6.5.0",
        "wpackagist-plugin/akismet": "^5.0",
        "wpackagist-theme/twentytwentyfour": "^1.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "extra": {
        "wordpress-install-dir": "web/wp",
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
		}
    },
    "scripts": {
        "post-autoload-dump": [
            "@make-scripts-executable"
        ],
        "make-scripts-executable": [
            "php ./scripts/make-executable.php"
        ],
        "setup": [
            "@generate-env",
			"@generate-config",
            "@generate-permissions",
            "@generate-salts",
            "@docker-setup"
        ],
        "generate-env": [
            "./scripts/generate-env.sh"
        ],
		"generate-config": [
			"./scripts/generate-wp-config.sh"
		],
        "generate-permissions": [
            "./scripts/generate-permissions.sh"
        ],
        "generate-salts": [
            "./scripts/generate-salts.sh"
        ],
        "docker-setup": [
            "./scripts/docker-setup.sh"
        ],
        "docker-up": [
            "docker-compose up -d"
        ],
        "docker-down": [
            "docker-compose down"
        ],
        "docker-build": [
            "docker-compose build --no-cache"
        ],
        "logs": [
            "docker-compose logs -f"
        ],
        "shell": [
            "./scripts/shell.sh"
        ],
        "wp": [
            "docker-compose exec web wp"
        ],
		"wp-install": [
			"docker-compose up -d",
			"docker-compose exec web php scripts/wp-install.php"
		],
        "check-versions": [
            "./scripts/check-versions.sh"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true,
            "johnpbloch/wordpress-core-installer": true
        }
    }
}
